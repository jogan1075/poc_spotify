<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="primaryText" parent="android:Widget.Material.TextView">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="secondaryText" parent="android:Widget.Material.TextView">
        <item name="android:textColor">@color/medium_dark_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>
</resources>
